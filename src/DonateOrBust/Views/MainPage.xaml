<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DonateOrBust.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:DonateOrBust.ViewModels"
    x:DataType="viewmodels:MainPageViewModel">

    <Grid HorizontalOptions="Center" VerticalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" Source="logo.png" />

        <Button
            Grid.Row="1"
            Command="{Binding CatsOrDogsTapCommand}"
            HorizontalOptions="Center"
            Text="Cats or Dogs?"
            VerticalOptions="Center" />

        <Label
            x:Name="SelectedOrgLabel"
            Grid.Row="2"
            FontSize="20"
            HorizontalOptions="Center"
            IsVisible="{Binding ShowSelectedOrg}"
            Text="{Binding SelectedOrg.Name}"
            VerticalOptions="Center" />

        <StackLayout
            x:Name="ActionButtons"
            Grid.Row="3"
            HorizontalOptions="Center"
            IsVisible="{Binding ShowSelectedOrg}"
            Orientation="Horizontal"
            Spacing="10"
            VerticalOptions="Center">
            <Button
                BackgroundColor="Green"
                Command="{Binding DonateTapCommand}"
                Text="Donate"
                TextColor="White" />
            <Button
                BackgroundColor="Blue"
                Command="{Binding ReferFriendTapCommand}"
                Text="Refer a Friend"
                TextColor="White" />
        </StackLayout>
    </Grid>
</ContentPage>            